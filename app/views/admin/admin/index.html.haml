%section#quick-links.row
  %h2.col-xs-12= t('.sections.quick_links')
  - %w(post page picture user).each do |model|
    - if can? :create, model.camelcase.constantize
      .col-xs-6.col-md-3
        = link_to self.send("new_admin_#{model}_path".to_sym), class: 'thumbnail' do
          = image_tag image_path("icons/32x32/#{model}-add.png"), alt: t(".quick_links.new_#{model}")
          .caption
            %p= t(".quick_links.new_#{model}")
- if can? :create, Post
  %section#quick-post.row
    %h2.col-xs-12= t('.sections.quick_post')
    .col-xs-12
      = bootstrap_form_for [:admin, Post.new], builder: AceBuilder, layout: :horizontal do |f|
        = f.text_field :title
        = f.picture_inserter :body
        = f.ace_editor :body, mode: 'rhtml'
        = f.form_group do
          = f.submit
%section#rails-info.row.hidden-xs.hidden-sm
  %h2.col-xs-12
    = t('.sections.rails_info')
    - if Rails.env.staging? || Rails.env.production?
      %small= t('.rails_info.deploy_time', time: deploy_time)
  .col-xs-12
    = Rails::Info.to_html.html_safe
%section#gems.row.hidden-xs.hidden-sm
  %h2.col-xs-12= t('.sections.gems')
  %ul
    - gem_dependencies.each do |gem|
      %li
        = gem[:name]
        (#{gem[:version]})
        - if gem[:dependencies].present?
          %ul
            - gem[:dependencies].each do |dependency|
              %li
                = dependency[:name]
                (#{dependency[:requirement]})
