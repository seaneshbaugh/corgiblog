<div id="page-info" class="in">
  <h2>Admin Panel Home</h2>
</div>
<div class="line"></div>
<div id="quick-links" class="in">
  <ul>
    <li><%= link_to image_tag(image_path("icons/32x32/user-add.png")) + "<br />Add User".html_safe, new_admin_user_path %></li>
    <li><%= link_to image_tag(image_path("icons/32x32/page-add.png")) + "<br />Add Page".html_safe, new_admin_page_path %></li>
    <li><%= link_to image_tag(image_path("icons/32x32/blog-post-add.png")) + "<br />Add Post".html_safe, new_admin_post_path %></li>
    <li><%= link_to image_tag(image_path("icons/32x32/image-add.png")) + "<br />Upload<br />Picture".html_safe, new_admin_picture_path %></li>
    <% if @current_user.privilege_level >= 4 %>
      <li><%= link_to image_tag(image_path("icons/32x32/power.png")) + "<br />Reboot Rails".html_safe, admin_reboot_path %></li>
    <% end %>
  </ul>
</div>
<div id="quick-post" class="in">
  <h3>Quick Post</h3>
  <%= form_for [:admin, @post], :html => { :multipart => true } do |f| %>
    <fieldset>
      <%= f.hidden_field :status, :value => 1 %>
      <%= f.hidden_field :private, :value => 0 %>
      <div>
        <%= f.label :title, "Title:" %><br />
        <%= f.text_field :title, :class => "small" %>
      </div>
      <div>
        <%= f.label :body, "Body:" %><br />
        <%= f.text_area :body, :class => "large" %>
      </div>
      <div>
        <%= submit_tag "Submit", :class => "submit" %>
      </div>
    </fieldset>
  <% end %>
</div>
<div class="in">
  Rails is currently in <%= Rails.env %> mode.
</div>
