<h2><%= t("pictures.#{@picture.persisted? ? 'edit' : 'new'}.title") %></h2>
<%= simple_form_for [:admin, @picture], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title, :as => :string %>
  <%= f.input :alt_text, :as => :string %>
  <%= f.input :caption %>
  <%= f.input :image, :as => :file %>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= link_to t('pictures.links.back_to_index'), admin_pictures_path, :class => 'btn btn-default' %>
      <%= f.button :submit, 'Submit', :class => 'btn btn-primary' %>
      <% unless @picture.persisted? %>
        <label for="redirect_to_new">
          <%= check_box_tag 'redirect_to_new', 1, true %> <%= t('helpers.submit.picture.redirect_to_new') %>
        </label>
      <% end %>
    </div>
  </div>
<% end %>
