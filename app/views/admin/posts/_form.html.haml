= bootstrap_form_for [:admin, @post], builder: AceBuilder, layout: :horizontal do |f|
  = f.text_field :title
  = f.picture_inserter :body
  = f.ace_editor :body, mode: 'rhtml'
  = f.ace_editor :style, mode: 'css'
  = f.text_area :meta_description, rows: '2'
  = f.text_area :meta_keywords, rows: '2'
  = f.text_field :tag_list, class: 'tokenfield', value: f.object.tag_list.to_s
  = f.form_group :visible do
    = f.check_box :visible
  = f.form_group :sticky do
    = f.check_box :sticky
  = f.text_field :tumblr_id
  = f.form_group do
    = f.primary
    = link_to t('cancel'), admin_posts_path, class: 'btn btn-default'
