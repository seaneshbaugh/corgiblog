<div id="posts" class="span10 offset1">
  <div class="block">
    <div class="block_head">
      <h2>
        <%= t("posts.index.title") %>
        <small><%= @posts.total_count %></small>
      </h2>
    </div>
    <div class="subnav">
      <ul class="nav nav-pills">
        <li><a href="#global">Global styles</a></li>
        <li><a href="#gridSystem">Grid system</a></li>
        <li><a href="#fluidGridSystem">Fluid grid system</a></li>
        <li><a href="#gridCustomization">Customizing</a></li>
        <li><a href="#layouts">Layouts</a></li>
        <li><a href="#responsive">Responsive design</a></li>
      </ul>
    </div>
    <div class="block_content">
      <table class="table table-striped">
        <thead>
          <th scope="col"><%= sort_link @search, :title %></th>
          <th scope="col"><%= sort_link @search, :user_id, 'Posted By' %></th>
          <th scope="col"><%= sort_link @search, :created_at %></th>
          <th scope="col"><%= sort_link @search, :updated_at %></th>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to truncate(post.title, :length => 64), admin_post_url(post) %></td>
              <td><%= link_to post.user.full_name %></td>
              <td><%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
              <td><%= post.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
