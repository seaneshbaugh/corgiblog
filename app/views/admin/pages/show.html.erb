<div id="page" class="admin-content">
  <h2><%= t('pages.show.title') %> <small><%= @page.title.html_safe %></small></h2>
  <table class="table table-condensed table-striped">
    <tbody>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.page.slug') %></th>
        <td><%= @page.slug %> <%= link_to '<i class="icon-share"></i>'.html_safe, "/#{@page.slug}", :target => '_blank' %></td>
      </tr>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.page.title') %></th>
        <td><%= @page.title %></td>
      </tr>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.page.body') %></th>
        <td><pre><%= @page.body.html_safe %></pre></td>
      </tr>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.page.style') %></th>
        <td><pre><%= @page.style.html_safe %></pre></td>
      </tr>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.page.visible') %></th>
        <td><%= @page.visible ? t('yes') : t('no') %></td>
      </tr>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.page.created_at') %></th>
        <td><%= @page.created_at %></td>
      </tr>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.page.updated_at') %></th>
        <td><%= @page.updated_at %></td>
      </tr>
    </tbody>
  </table>
  <div class="form-actions">
    <%= link_to t('pages.links.back_to_index'), admin_pages_path, :class => 'btn' %>
    <% if can? :edit, Page, current_user %><%= link_to t('pages.edit.title'), edit_admin_page_path(@page), :class => 'btn' %><% end %>
    <% if can? :destroy, Page, current_user %><%= link_to t('pages.delete.title'), admin_page_path(@page), :method => 'delete', :class => 'btn btn-danger', :data => { :confirm => t('confirm_delete') } %><% end %>
  </div>
</div>
