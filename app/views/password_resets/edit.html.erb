<h1>Reset Password</h1>
<%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit "Update Password" %>
  </p>
<% end %>
