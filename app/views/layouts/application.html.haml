!!!
%html{ dir: 'ltr', lang: 'en-US' }
  %head
    %meta{ charset: 'utf-8' }
    %title= page_title(yield(:page_title))
    %meta{ content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no', name: 'viewport' }
    %meta{ content: page_meta_description(yield(:meta_description)), name: 'description' }
    %meta{ content: 'Sean Eshbaugh', name: 'author' }
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    - if Rails.env.production? && current_user.nil?
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-28027997-1', 'auto');
        ga('send', 'pageview');
    %link{ href: '/favicon.ico', rel: 'shortcut icon' }
    %link{ href: image_path('apple-touch-icon-iphone.png'), rel: 'apple-touch-icon', sizes: '57x57' }
    %link{ href: image_path('apple-touch-icon-ipad.png'), rel: 'apple-touch-icon', sizes: '72x72' }
    %link{ href: image_path('apple-touch-icon-iphone-retina.png'), rel: 'apple-touch-icon', sizes: '114x114' }
    %link{ href: image_path('apple-touch-icon-ipad-retina.png'), rel: 'apple-touch-icon', sizes: '144x144' }
    %link{ href: '/humans.txt', rel: 'author' }
    = csrf_meta_tags
  %body
    #content-wrap
      %nav.navbar.navbar-default.navbar-fixed-top
        .container
          .navbar-header
            %button.navbar-toggle{ 'data-target' => '.navbar-collapse', 'data-toggle' => 'collapse', type: 'button' }
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to 'Conney the Corig!', root_path, class: 'navbar-brand'
          .navbar-collapse.collapse
            %ul.nav.navbar-nav
              %li{ class: is_active_controller?('pictures') ? 'active' : nil }
                = link_to 'Pictures', pictures_path
              = nav_link_to 'Pictures', pictures_path, {}. { segments: 1, wrapper: 'li' }
              - @pages.each do |page|
                %li{ class: is_active_page?(page.slug) ? 'active' : nil }
                  = link_to page.title, "/#{page.slug}"
              %li{ class: is_active_controller?('contact') ? 'active' : nil }
                = link_to 'Contact', contact_path
            - if current_user.present?
              %ul.nav.navbar-nav.navbar-right
                %li
                  = link_to 'Admin Panel', admin_root_path
                %li
                  = link_to 'Sign Out', destroy_user_session_path, method: :delete
      %main#content.container
        = yield
    %footer.main-footer
      .container
