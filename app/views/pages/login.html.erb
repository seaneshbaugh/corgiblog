<div id="login">
  <div id="login-form">
    <h1>Login</h1>
    <%= form_tag sessions_path do %>
      <fieldset>
        <div class="login-field">
          <%= label_tag :email_address %><br />
          <%= text_field_tag :email_address, params[:email_address], :class => "small" %>
        </div>
        <div class="login-field">
          <%= label_tag :password %><br />
          <%= password_field_tag :password, :class => "small" %>
        </div>
        <div class="login-field">
          <%= link_to "Forgot your password?", new_password_reset_path %>
        </div>
        <div class="login-field">
          <%= check_box_tag :remember_me, 1, params[:remember_me], :title => "This will set a \"permanent\" cookie in your browser allowing this site to remember your login information across browser sessions. Only a hash unique to you is stored in the cookie. No other personally identifying information is stored. Do not select this option if you are on a shared or public computer." %>
          <%= label_tag :remember_me %>
        </div>
        <div class="login-field">
          <%= check_box_tag :limit_session, 1, params[:limit_session], :title => "By default you can have multiple computers remember your login information. Select this option if you wish to limit remembered sessions to this computer (and to your current browser). You will have to manually log in if you use another computer or browser." %>
          <%= label_tag :limit_session %>
        </div>
        <div class="login-field">
          <%= submit_tag "Login" %>
        </div>
      </fieldset>
    <% end %>
  </div>
  <!-- this ID is NOT semantic! -->
  <div id="login-image">
    <img src="http://placehold.it/440x336" alt="placeholder image" title="placeholder image" />
  </div>
</div>
<!-- move this to main JS file -->
<script>
  $(function() {
    $("#password").val("");
  });
</script>
