#reset-password.page
  %header.page-header
    %h1 Update Your Password
  .page-body
    = bootstrap_form_for resource, as: resource_name, url: password_path(resource_name), layout: :horizontal, html: { method: :put } do |f|
      = f.hidden_field :reset_password_token
      = f.full_error :reset_password_token
      = f.password_field :password, label: 'New Password'
      = f.password_field :password_confirmation, label: 'Confirm New Password'
      = f.form_group do
        = f.submit 'Change Your Password'
    = render 'devise/shared/links'
