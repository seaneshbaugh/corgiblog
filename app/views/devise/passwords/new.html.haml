#forgot-password.page
  %header.page-header
    %h1 Forgot Your Password?
  .page-body
    = bootstrap_form_for resource, as: resource_name, url: password_path(resource_name), layout: :horizontal do |f|
      = f.email_field :email
      = f.form_group do
        = f.submit 'Send Password Reset Instructions'
    = render 'devise/shared/links'
