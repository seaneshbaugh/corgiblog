#login.page
  %header.page-header
    %h1 Sign In
  .page-body
    = bootstrap_form_for resource, as: resource_name, url: session_path(resource_name), layout: :horizontal do |f|
      = f.email_field :email, autofocus: true
      = f.password_field :password
      - if devise_mapping.rememberable?
        = f.form_group do
          = f.check_box :remember_me
      = f.form_group do
        = f.submit 'Sign In'
    = render 'devise/shared/links'
