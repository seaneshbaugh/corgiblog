<% flash.each do |name, message| %>
  <% if name == :notice %>
    <div class="alert alert-info">
      <a class="close" data-dismiss="alert">×</a>
      <%= message.html_safe %>
    </div>
  <% end %>
  <% if name == :alert %>
    <div class="alert">
      <a class="close" data-dismiss="alert">×</a>
      <%= message.html_safe %>
    </div>
  <% end %>
  <% if name == :error %>
    <div class="alert alert-error">
      <a class="close" data-dismiss="alert">×</a>
      <%= message.html_safe %>
    </div>
  <% end %>
  <% if name == :success %>
    <div class="alert alert-success">
      <a class="close" data-dismiss="alert">×</a>
      <%= message.html_safe %>
    </div>
  <% end %>
<% end %>
